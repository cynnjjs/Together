<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditTxt"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:layout_marginTop="100dp"
            android:text="Enter the username of the user who fulfilled your request"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameEditTxt2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:text="(Your listed points will be rewarded to that user)"
            android:textColor="#000000"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/editText1"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to delete the request"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView><!-- From: file:/Users/yiningchen/Desktop/Together/ParseStarterProject/res/layout/activity_requestconfirm.xml -->